<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="helpdesk.controller.LoginController">
    <center>
        <GridPane hgap="10" vgap="10" prefHeight="300.0" prefWidth="275.0" >
            <GridPane.margin>
                <Insets topRightBottomLeft="10" />
            </GridPane.margin>
                <Label text="Helpdesk" GridPane.columnSpan="3" GridPane.rowIndex="0">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label fx:id="login_error" alignment="CENTER" prefHeight="35.0" prefWidth="260.0" text="Wrong username or password" textFill="RED" GridPane.columnSpan="2" GridPane.rowIndex="4" />
                <Label text="Password" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="1"/>
                <Button fx:id="login_button" mnemonicParsing="false" onAction="#onLoginButtonClick" prefHeight="25.0" prefWidth="71.0" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <TextField fx:id="username" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Username" GridPane.rowIndex="2" />
                <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        </GridPane>
    </center>
</BorderPane>